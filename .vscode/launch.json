{
  "configurations": [
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "program": "${workspaceFolder}/cross-env",
      "cwd": "${workspaceFolder}",
      "args": [
        "NODE_ENV=test",
        "jest",
        "--verbose",
        "--runInBand",
        "--watchAll=false"
      ]
    }
  ]
}
